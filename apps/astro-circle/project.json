{
  "name": "astro-circle",
  "root": "apps/astro-circle",
  "sourceRoot": "apps/astro-circle/src",
  "projectType": "application",
  "tags": ["type:app", "scope:astro-circle"],
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm astro dev",
        "cwd": "apps/astro-circle"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "pnpm astro build",
        "cwd": "apps/astro-circle"
      }
    },
    "check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm astro check",
        "cwd": "apps/astro-circle"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "apps/astro-circle/src/**/*.ts",
          "apps/astro-circle/src/**/*.tsx",
          "apps/astro-circle/src/**/*.astro",
          "apps/astro-circle/**/*.config.ts",
          "apps/astro-circle/**/*.config.mjs"
        ]
      }
    },
    "type-check": {
      "executor": "@nx/js:tsc",
      "options": {
        "tsConfig": "apps/astro-circle/tsconfig.json",
        "noEmit": true
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "apps/astro-circle/.vitest"
      }
    }
  }
}
