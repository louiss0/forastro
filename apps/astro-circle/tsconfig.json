{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "types": ["astro/client", "vite/client"],
    "moduleResolution": "Bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src", "**/*.ts", "**/*.tsx", "**/*.astro"],
  "exclude": ["dist", "node_modules", "astro.config.*", "vite.config.*", "../../packages/**"]
}
