{
  "name": "blog",
  "root": "apps/blog",
  "sourceRoot": "apps/blog/src",
  "projectType": "application",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm astro dev",
        "cwd": "apps/blog"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "pnpm astro build",
        "cwd": "apps/blog"
      }
    },
    "check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm astro check",
        "cwd": "apps/blog"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm eslint \"apps/blog/**/*.{ts,tsx,astro}\" --max-warnings=0"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tsc -p apps/blog/tsconfig.json --noEmit"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "apps/blog/.vitest"
      }
    }
  },
  "tags": ["type:app", "scope:blog"]
}
