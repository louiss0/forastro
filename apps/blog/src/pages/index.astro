---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
// Example: Import AsciiDoc content (when needed)
// import welcome from '../content/welcome.adoc';

const posts = (await getCollection('blog') as CollectionEntry<'blog'>[])
  .sort((a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) => 
    new Date(b.data.updatedAt).getTime() - new Date(a.data.updatedAt).getTime()
  );
---
<BaseLayout title="ForAstro Blog">
  <main>
    <h1>Blog</h1>
    <p><em>AsciiDoc integration enabled via @forastro/asciidoc</em></p>
{posts.map((p: import('astro:content').CollectionEntry<'blog'>) => <PostCard entry={p} />)}
  </main>
</BaseLayout>
