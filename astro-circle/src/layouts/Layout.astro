---
import '@fontsource/palanquin/100.css';
import '@fontsource/palanquin/300.css';
import '@fontsource/palanquin/400.css';
import '@fontsource/palanquin/700.css';
import '@fontsource/palanquin/900.css';
import '@fontsource/raleway';
import Head from '../components/Head.astro';

export interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Head {...{ title, description }} />
    <style is:global>
      /** 
        
        * ! These styles come from utopia to change this setting please go to it and go from there.
        * ! The heading font id the font for all headings on the page 
        * ! Please change only the colors and ranges on the body.
        * ! The grid and the height class makes it so that. 
          * ! if a header is used it will stick to the top.      
          * ! if a main is used it will stick to the bottom.      
          * ! if a footer is used it will stick to the bottom.
                
        ** The step variables are used in the typography component.          
      */

      :root {
        --step--2: clamp(0.52rem, calc(0.47rem + 0.27vw), 0.64rem);
        --step--1: clamp(0.63rem, calc(0.55rem + 0.4vw), 0.8rem);
        --step-0: clamp(0.75rem, calc(0.64rem + 0.57vw), 1rem);
        --step-1: clamp(0.9rem, calc(0.74rem + 0.8vw), 1.25rem);
        --step-2: clamp(1.08rem, calc(0.86rem + 1.1vw), 1.56rem);
        --step-3: clamp(1.3rem, calc(1rem + 1.49vw), 1.95rem);
        --step-4: clamp(1.56rem, calc(1.15rem + 2.01vw), 2.44rem);
        --step-5: clamp(1.87rem, calc(1.33rem + 2.69vw), 3.05rem);
        --heading-font: 'Palanquin', sans-serif;
        --body-font: 'Lato', sans-serif;
      }
    </style>
  </head>
  <body
    style={{
      fontSize: 'var(--step-0)',
      fontFamily: 'var(--body-font)',
    }}
    class:list={[
      'text-gray-900 dark:text-gray-50 selection:text-gray-50 dark:selection:text-gray-900',
      'bg-gray-50  dark:text-gray-900 selection:bg-gray-900 dark:selection:bg-gray-50',
      'min-h-screen',
      'grid grid-rows-[auto_1fr_auto]',
    ]}
  >
    <slot />
  </body>
</html>
