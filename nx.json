{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "plugins": [],
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/eslint.config.cjs"
    ],
    "sharedGlobals": []
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["type-check", "lint", "^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "inputs": ["default", "^production"],
      "cache": true
    },
    "lint": {
      "inputs": ["default", "^production"],
      "cache": true
    },
    "test": {
      "inputs": ["default", "^production"],
      "cache": true
    },
    "check": {
      "dependsOn": ["lint", "type-check", "test"],
      "cache": false
    },
    "@nx/vite:test": {
      "inputs": ["default", "^production"],
      "cache": true
    },
    "@nx/vite:build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "@nx/esbuild:esbuild": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "tsup": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"]
    }
  },
  "affected": {
    "defaultBase": "main"
  },
  "nxCloudAccessToken": "M2RkODMwNDktNTBmNi00NzJhLWIxYjctYzI0NjExMTVhZDgxfHJlYWQtd3JpdGU=",
  "useInferencePlugins": false,
  "release": {
    "projects": ["packages/*"],
    "projectsRelationship": "independent",
    "changelog": {
      "projectChangelogs": {
        "createRelease": "github"
      }
    },
    "version": {
      "preVersionCommand": "pnpm exec nx run-many --target 'build' --projects 'tag:nx:lib:ongoing'",
      "conventionalCommits": true,
      "preserveLocalDependencyProtocols": false,
      "versionActionsOptions": {
        "skipLockFileUpdate": true
      }
    },
    "releaseTagPattern": "{projectName}@{version}",
    "git": {
      "commitMessage": "chore({projectName}): release version {version}"
    }
  }
}
