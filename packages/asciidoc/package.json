  "author": {
    "name": "Shelton Louis",
    "url": "https://github.com/louiss0"
  },
  "bugs": {
    "url": "https://github.com/louiss0/forastro/issues",
    "email": "louisshelton0@gmail.com"
  },
  "homepage": "https://forastro-docs.onrender.com/libraries/asciidoc",
  "repository": {
    "directory": "packages/asciidoc",
    "type": "git",
    "url": "https://github.com/louiss0/forastro"
  },
  "keywords": [
    "astro",
    "astro-loader",
    "asciidoc",
    "unocss",
    "tailwindcss"
  ],
  "files": [
    "*.js",
    "*.d.ts",
    "lib/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "@types/prismjs": "^1.26.5",
    "tailwindcss": "^4.0.0",
    "tsup": "^8.5.0",
    "unocss": "^65.4.3"
  }
