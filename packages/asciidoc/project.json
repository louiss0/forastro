{
  "name": "asciidoc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/asciidoc/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": [],
  "targets": {
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "production",
      "options": {
        "parallel": false,
        "commands": [
          "cp -r packages/asciidoc/src/ dist/packages/asciidoc",
          "cp packages/asciidoc/README.md dist/packages/asciidoc",
          "cp packages/asciidoc/package.json dist/packages/asciidoc"
        ]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{options.reportsDirectory}"
      ],
      "options": {
        "reportsDirectory": "../../coverage/packages/asciidoc"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}