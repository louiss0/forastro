{
  "name": "asciidoc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/asciidoc/src",
  "projectType": "library",
  "release": {
    "version": {
      "currentVersionResolver": "git-tag",
      "preserveLocalDependencyProtocols": false
    }
  },
  "tags": ["nx:lib", "nx:lib:ongoing"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/packages/asciidoc"],
      "options": {
        "command": "tsup --outDir ../../dist/packages/asciidoc",
        "cwd": "packages/asciidoc"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm eslint \"packages/asciidoc/**/*.{ts,tsx}\""
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tsc -p packages/asciidoc/tsconfig.lib.json --noEmit"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/packages/asciidoc",
        "passWithNoTests": false
      }
    },
    "check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node -e \"process.exit(0)\""
      }
    }
  }
}
