{
  "name": "markdoc-html-tags",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/markdoc-html-tags/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/markdoc-html-tags",
        "main": "packages/markdoc-html-tags/src/index.ts",
        "tsConfig": "packages/markdoc-html-tags/tsconfig.lib.json",
        "assets": ["packages/markdoc-html-tags/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs markdoc-html-tags {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/markdoc-html-tags/**/*.ts"]
      }
    }
  },
  "tags": []
}
