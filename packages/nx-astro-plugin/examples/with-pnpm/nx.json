{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "origin/main"
  },
  "cli": {
    "packageManager": "pnpm"
  },
  "targetDefaults": {
    "dev": {
      "cache": false
    },
    "build": {
      "cache": true,
      "outputs": ["dist/{projectName}"]
    },
    "preview": {
      "cache": false
    },
    "check": {
      "cache": true
    }
  }
}
