{
  "$schema": "https://json.schemastore.org/nx-plugin.schema.json",
  "generators": {
    "init": {
      "factory": "./generators/init/generator",
      "schema": "./generators/init/schema.json",
      "description": "Initialize workspace defaults for Astro in Nx"
    },
    "app": {
      "factory": "./generators/app/generator",
      "schema": "./generators/app/schema.json",
      "description": "Create an Astro application using create-astro (non-interactive)"
    },
    "add-integration": {
      "factory": "./generators/add-integration/generator",
      "schema": "./generators/add-integration/schema.json",
      "description": "Add and configure Astro integrations"
    },
    "content": {
      "factory": "./generators/content/generator",
      "schema": "./generators/content/schema.json",
      "description": "Generate a content entry in a specific collection"
    },
    "page": {
      "factory": "./generators/page/generator",
      "schema": "./generators/page/schema.json",
      "description": "Generate an Astro page"
    },
    "component": {
      "factory": "./generators/component/generator",
      "schema": "./generators/component/schema.json",
      "description": "Generate an Astro component"
    },
    "layout": {
      "factory": "./generators/layout/generator",
      "schema": "./generators/layout/schema.json",
      "description": "Generate an Astro layout"
    },
    "collection-schema": {
      "factory": "./generators/collection-schema/generator",
      "schema": "./generators/collection-schema/schema.json",
      "description": "Generate a content collection schema"
    },
    "starlight-docs": {
      "factory": "./generators/starlight-docs/generator",
      "schema": "./generators/starlight-docs/schema.json",
      "description": "Bootstrap a Starlight docs structure"
    }
  }
}
