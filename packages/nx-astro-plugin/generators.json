{
  "$schema": "https://json.schemastore.org/nx-plugin.schema.json",
  "generators": {
    "init": {
      "factory": "./src/generators/init/generator.ts",
      "schema": "./src/generators/init/schema.json",
      "description": "Initialize workspace defaults for Astro in Nx"
    },
    "app": {
      "factory": "./src/generators/app/generator.ts",
      "schema": "./src/generators/app/schema.json",
      "description": "Create an Astro application using create-astro (non-interactive)"
    },
    "add-integration": {
      "factory": "./src/generators/add-integration/generator.ts",
      "schema": "./src/generators/add-integration/schema.json",
      "description": "Add and configure Astro integrations"
    },
    "generate-content": {
      "factory": "./src/generators/generate-content/generator.ts",
      "schema": "./src/generators/generate-content/schema.json",
      "description": "Generate example content based on installed integrations"
    },
    "page": {
      "factory": "./src/generators/page/generator.ts",
      "schema": "./src/generators/page/schema.json",
      "description": "Generate an Astro page"
    },
    "component": {
      "factory": "./src/generators/component/generator.ts",
      "schema": "./src/generators/component/schema.json",
      "description": "Generate an Astro component"
    },
    "layout": {
      "factory": "./src/generators/layout/generator.ts",
      "schema": "./src/generators/layout/schema.json",
      "description": "Generate an Astro layout"
    },
    "collection-schema": {
      "factory": "./src/generators/collection-schema/generator.ts",
      "schema": "./src/generators/collection-schema/schema.json",
      "description": "Generate a content collection schema"
    },
    "starlight-docs": {
      "factory": "./src/generators/starlight-docs/generator.ts",
      "schema": "./src/generators/starlight-docs/schema.json",
      "description": "Bootstrap a Starlight docs structure"
    }
  }
}
