{
  "$schema": "http://json-schema.org/schema",
  "title": "Init Astro project",
  "type": "object",
  "properties": {
    "name": { 
      "type": "string", 
      "description": "Project name" 
    },
    "template": {
      "type": "string",
      "description": "Template to use",
      "default": "astro-minimal",
      "enum": ["astro-minimal", "astro-vue", "astro-preact", "astro-mdx", "astro-markdoc", "astro-asciidoc"]
    },
    "directory": { 
      "type": "string", 
      "description": "Destination directory (apps/ by default)" 
    },
    "tags": { 
      "type": "string", 
      "description": "Tags for linting/graph (comma-separated)" 
    },
    "skipInstall": { 
      "type": "boolean", 
      "description": "Skip dependency installation", 
      "default": false 
    },
    "packageManager": {
      "type": "string",
      "description": "Package manager override (jpd or pnpm)",
      "enum": ["jpd", "pnpm"]
    }
  },
  "required": ["name"]
}
