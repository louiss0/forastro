  "description": "Nx plugin for Astro: scaffold, integrate, and run Astro in package-based workspaces.",
  "type": "module",
  "license": "MIT",
  "author": "forastro",
  "keywords": ["nx", "astro", "plugin", "forastro"],
  "main": "./dist/index.js",
  "exports": {
