{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@forastro/nx-astro-plugin",
  "root": "packages/nx-astro-plugin",
  "sourceRoot": "packages/nx-astro-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "command": "tsup --config tsup.config.ts && node scripts/copy-assets.mjs",
        "cwd": "packages/nx-astro-plugin"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/nx-astro-plugin/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "passWithNoTests": false,
        "reportsDirectory": "packages/nx-astro-plugin/coverage",
        "config": "packages/nx-astro-plugin/vitest.config.ts"
      }
    }
  },
  "tags": ["nx:lib", "nx:lib:ongoing"]
}
