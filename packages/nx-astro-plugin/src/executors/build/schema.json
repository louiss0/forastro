{
  "$schema": "http://json-schema.org/schema",
  "version": 2,
  "title": "Astro Build Executor",
  "description": "Build the Astro project for production",
  "type": "object",
  "properties": {
    "root": {
      "type": "string",
      "description": "The root directory of the Astro project",
      "default": "."
    },
    "packageManager": {
      "type": "string",
      "description": "The package manager to use",
      "enum": ["npm", "yarn", "pnpm", "bun"],
      "default": "pnpm"
    },
    "outputPath": {
      "type": "string",
      "description": "The output directory for the build",
      "default": "dist"
    },
    "verbose": {
      "type": "boolean",
      "description": "Enable verbose logging",
      "default": false
    }
  },
  "required": ["root"]
}
