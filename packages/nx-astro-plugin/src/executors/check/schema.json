{
  "$schema": "http://json-schema.org/schema",
  "version": 2,
  "title": "Astro Check Executor",
  "description": "Run Astro check for TypeScript and other issues",
  "type": "object",
  "properties": {
    "root": {
      "type": "string",
      "description": "The root directory of the Astro project",
      "default": "."
    },
    "packageManager": {
      "type": "string",
      "description": "The package manager to use",
      "enum": ["npm", "yarn", "pnpm", "bun"],
      "default": "pnpm"
    },
    "watch": {
      "type": "boolean",
      "description": "Watch for changes and re-run check",
      "default": false
    },
    "verbose": {
      "type": "boolean",
      "description": "Enable verbose logging",
      "default": false
    }
  },
  "required": ["root"]
}
