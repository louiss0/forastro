{
  "$schema": "http://json-schema.org/schema",
  "version": 2,
  "title": "Astro Dev Executor",
  "description": "Start the Astro development server",
  "type": "object",
  "properties": {
    "root": {
      "type": "string",
      "description": "The root directory of the Astro project",
      "default": "."
    },
    "packageManager": {
      "type": "string",
      "description": "The package manager to use",
      "enum": ["npm", "yarn", "pnpm", "bun"],
      "default": "pnpm"
    },
    "port": {
      "type": "number",
      "description": "Port to run the development server on",
      "default": 4321
    },
    "host": {
      "type": "string",
      "description": "Host to run the development server on",
      "default": "localhost"
    },
    "open": {
      "type": "boolean",
      "description": "Open the browser when the server starts",
      "default": false
    },
    "verbose": {
      "type": "boolean",
      "description": "Enable verbose logging",
      "default": false
    }
  },
  "required": ["root"]
}
