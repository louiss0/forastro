{
  "$schema": "http://json-schema.org/schema",
  "title": "astro preview",
  "type": "object",
  "properties": {
    "port": { "type": "number", "description": "Port to listen on" },
    "host": { "type": "string", "description": "Hostname to bind to" },
    "outDir": { "type": "string", "default": "dist", "description": "Output directory" },
    "allowGlobal": { "type": "boolean", "default": true, "description": "Allow global astro binary as fallback" },
    "binOverride": { "type": "string", "description": "Explicit path to astro binary" },
    "args": { "type": "array", "items": { "type": "string" }, "description": "Extra CLI arguments" }
  }
}
