{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the project to migrate",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "directory": {
      "type": "string",
      "description": "The directory where the existing Astro project is located",
      "alias": "dir"
    },
    "skipFormat": {
      "type": "boolean",
      "description": "Skip formatting files",
      "default": false
    },
    "convertScripts": {
      "type": "boolean",
      "description": "Convert package.json scripts to Nx targets",
      "default": true
    }
  },
  "required": ["name"],
  "additionalProperties": false
}
