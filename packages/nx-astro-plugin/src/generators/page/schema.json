{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "@forastro/nx-astro-plugin:page",
  "type": "object",
  "properties": {
    "project": { "type": "string", "description": "Nx project name" },
    "name": { "type": "string", "description": "Page name (file stem)" },
    "directory": {
      "type": "string",
      "description": "Optional subdirectory under src/pages"
    },
    "type": {
      "type": "string",
      "enum": ["static", "dynamic"],
      "default": "static",
      "description": "Page type: static for regular pages, dynamic for pages with getStaticPaths"
    }
  },
  "required": ["project", "name"]
}
