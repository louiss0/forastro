---
type Props =
  | {
      title: string;
      children: Array<astroHTML.JSX.HTMLAttributes>;
      label?: never;
    }
  | {
      title?: never;
      children: Array<astroHTML.JSX.HTMLAttributes>;
      label: Lowercase<string>;
    };

const { title, label } = Astro.props;

const dashedTitle = title?.toLowerCase()?.replaceAll(" ", "-");
---

<section class="px-4 py-8" aria-label={label} aria-labelledby={dashedTitle}>
  <div class="grid gap-4">
    {title ? <h2 id={dashedTitle}>{title}</h2> : null}
    <slot />
  </div>
</section>
