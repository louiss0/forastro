---
import "@fontsource/lato/100.css";
import "@fontsource/lato/300.css";
import "@fontsource/lato/400.css";
import "@fontsource/lato/700.css";
import "@fontsource/lato/900.css";
import "@fontsource/raleway";
import Head from "../components/Head.astro";

export interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Head {...{title, description}} />
    <style is:global>
      /** 
        
        * ! These styles come from utopia to change this setting please go to it and go from there.
        * ! The heading font id the font for all headings on the page 
        * ! Please change only the colors and ranges on the body.
        * ! The grid and the height class makes it so that. 
          * ! if a header is used it will stick to the top.      
          * ! if a main is used it will stick to the bottom.      
          * ! if a footer is used it will stick to the bottom.
                
        ** The step variables are used in the typography component.          
      */

      :root {
        --step--2: clamp(0.69rem, calc(0.58rem + 0.48vw), 0.96rem);
        --step--1: clamp(0.78rem, calc(0.6rem + 0.75vw), 1.2rem);
        --step-0: clamp(0.88rem, calc(0.62rem + 1.1vw), 1.5rem);
        --step-1: clamp(0.98rem, calc(0.62rem + 1.57vw), 1.88rem);
        --step-2: clamp(1.11rem, calc(0.6rem + 2.19vw), 2.34rem);
        --step-3: clamp(1.25rem, calc(0.55rem + 2.98vw), 2.93rem);
        --step-4: clamp(1.4rem, calc(0.47rem + 4vw), 3.66rem);
        --step-5: clamp(1.58rem, calc(0.33rem + 5.3vw), 4.58rem);

        --heading-font: "Raleway", sans-serif;
        --body-font: "Lato", sans-serif;
      }
    </style>
  </head>
  <body
    style={{
      fontSize: "var(--step-0)",
      fontFamily: "var(--body-font)",
    }}
    class:list={[
      "text-gray-900 dark:text-gray-50 selection:text-gray-50 dark:selection:text-gray-900",
      "bg-gray-50  dark:text-gray-900 selection:bg-gray-900 dark:selection:bg-gray-50",
      "min-h-screen",
      "grid grid-rows-[auto_1fr_auto]",
    ]}
  >
    <slot />
  </body>
</html>
