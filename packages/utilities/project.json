{
  "name": "utilities",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/utilities/src",
  "projectType": "library",
  "release": {
    "version": {
      "currentVersionResolver": "git-tag",
      "preserveLocalDependencyProtocols": false
    }
  },
  "tags": ["nx:lib", "nx:lib:ongoing"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/packages/utilities"],
      "options": {
        "command": "tsup --outDir ../../dist/packages/utilities",
        "cwd": "packages/utilities"
      }
    },
    "type-check": {
      "executor": "@nx/js:tsc",
      "outputs": ["{workspaceRoot}/dist/packages/utilities"],
      "options": {
        "rootDir": "packages/utilities",
        "tsConfig": "packages/utilities/tsconfig.lib.json"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/packages/utilities"
      }
    }
  }
}
