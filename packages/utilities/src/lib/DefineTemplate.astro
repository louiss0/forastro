---
import { defineGlobalTemplateMap, setToGlobalTemplateMap } from "./helpers";


type Props<T extends Record<string, unknown>> = {
  templateName: Lowercase<string>;
  children: ((context:T | undefined ,defaultSlot:()=> string | null) => any)
  | Array<astroHTML.JSX.HTMLAttributes> | string;
};  

const { templateName } = Astro.props;

defineGlobalTemplateMap();

setToGlobalTemplateMap(templateName, (...args) =>
  Astro.slots.render("default", args)
);
