{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest"
    ]
  },
  "include": [
    "src/**/__tests__/**/*",
    "src/**/__tests__/**/*.{spec,test}.{ts,tsx}"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/__fixtures__/**",
    "src/**/__mocks__/**",
    "src/**/projector/**"
  ]
}
