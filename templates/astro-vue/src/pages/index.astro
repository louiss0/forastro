---
import Center from '~/components/Center.vue';
import Container from '~/components/Container.vue';
import List from '~/components/List.vue';
import Default from '~/layouts/Default.astro';
import Typography from '~/components/Typography.astro';
import SpacedBox from '~/components/SpacedBox.vue';

const DOCUMENTATION_NAMES_AND_LINKS = [
  { name: 'Astro', link: 'https://docs.astro.build/' },
  { name: 'Vue', link: 'https://vuejs.org' },
  {
    name: 'For Astro Utilities',
    link: 'https://forastro-docs.onrender.com/libraries/utilities',
  },
  { name: 'Uno', link: 'https://unocss.dev' },
] as const;

const CORE_LIBRARY_SENTENCES = [
  'Astro Components and Utility Functions  @forastro/utilities',
  'Essential Vue Utilities @vueuse/core',
  'Icon Library unplugin-icons',
  'Styling unocss',
] as const;
---

<Default title="Welcome to Astro." description="this is good">
  <header class="px-4 py-12 text-center">
    <Center>
      <Typography tag={'h1'}>Welcome to the Vue Astro template.</Typography>
    </Center>
  </header>
  <main class="px-2 py-6">
    <Container>
      <Center gapClass="gap-16">
        <Typography tag={'p'}>
          This template is created by <a
            class="p-1"
            href="https://github.com/louiss0">Shelton Louis</a
          >. It uses <code>@fontsource</code> for fonts. Uno for styles. Preact
          of course for UI interactivty. You also get a nice set of Components
          for you to work faster. Look into the README for more information
          about this template.
        </Typography>

        <Center gapClass="gap-6">
          <List
            title="List of core depedencies "
            listClass="grid gap-4 list-disc"
            itemClass="py-2 px-4"
            items={CORE_LIBRARY_SENTENCES}
          />
        </Center>
      </Center>
    </Container>
  </main>
  <footer class="px-20 py-6">
    <Center gapClass="gap-2">
      <strong class="text-lg"> Docs</strong>
      <SpacedBox gapClass="gap-4">
        {
          DOCUMENTATION_NAMES_AND_LINKS.map(({ name, link }) => (
            <a class="px-3 py-1" href={link}>
              {name}
            </a>
          ))
        }
      </SpacedBox>
    </Center>
  </footer>
</Default>
