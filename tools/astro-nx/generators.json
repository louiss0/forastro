{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/generators.json",
  "generators": {
    "page": {
      "implementation": "./src/generators/page/generator",
      "schema": "./src/generators/page/schema.json",
      "description": "Generate an Astro page"
    },
    "component": {
      "implementation": "./src/generators/component/generator",
      "schema": "./src/generators/component/schema.json",
      "description": "Generate an Astro component"
    },
    "content-file": {
      "implementation": "./src/generators/content-file/generator",
      "schema": "./src/generators/content-file/schema.json",
      "description": "Generate a content file for Astro"
    },
    "astro-file": {
      "implementation": "./src/generators/astro-file/generator",
      "schema": "./src/generators/astro-file/schema.json",
      "description": "Unified front-end generator for Astro pages and components"
    },
    "app": {
      "implementation": "./src/generators/app/generator",
      "schema": "./src/generators/app/schema.json",
      "description": "Generate a React Vite app with modern tooling and best practices"
    }
  }
}
