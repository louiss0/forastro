---
export interface Props {
  title?: string;
  class?: string;
}

const { title = 'Sample Component', class: className } = Astro.props;
---

<div class={`component ${className || ''}`}>
  <h2>{title}</h2>
  <p>This is a sample Astro component that you can use as a template.</p>
  <slot />
</div>

<style>
  .component {
    padding: 1rem;
    border: 1px solid #ccc;
    border-radius: 0.5rem;
    margin: 1rem 0;
  }
  
  .component h2 {
    margin-top: 0;
    color: #333;
  }
  
  .component p {
    color: #666;
  }
</style>
