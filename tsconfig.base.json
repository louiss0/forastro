{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "esnext",
    "lib": ["es2023", "dom"],
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@forastro/asciidoc": ["packages/asciidoc/src/index.ts"],
      "@forastro/markdoc-html-tags": ["packages/markdoc-html-tags"],
      "@forastro/nx-astro-plugin": ["packages/nx-astro-plugin/src/index.ts"],
      "@forastro/packages": ["packages/src/index.ts"],
      "@forastro/remark-html-directives-integration": [
        "packages/remark-html-directives-integration"
      ],
      "@forastro/starlight-asciidoc": ["packages/starlight-asciidoc/src/index.ts"],
      "@forastro/utilities": ["packages/utilities/src/index.ts"]
    }
  },
  "references": [
    {
      "path": "packages/asciidoc"
    },
    {
      "path": "packages/nx-astro-plugin"
    },
    {
      "path": "packages/starlight-asciidoc"
    },
    {
      "path": "packages/utilities"
    }
  ],
  "exclude": ["node_modules", "tmp"]
}
